
@{
    ViewBag.Title = "Room";
}

<h2>Room</h2>

<form action="/" method="post">

    <div class="form-horizontal">
        <div class="form-group">
            <a href="@Url.Action("CreateRoom","Customer")" class="btn btn-primary">Create Room</a>
            &nbsp;
            <a href="@Url.Action("AssignRoom","Customer")" class="btn btn-success">Assign Room</a>
            <br />
            </div>
            <div class="form-group">
                <label class="col-md-2">Room No</label>
                <div class="col-md-10">
                    <input type="text" name="room_no" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2">Check In Date</label>
                <div class="col-md-10">
                    <input type="datetime-local" name="check_in" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2">Check Out Date</label>
                <div class="col-md-10">
                    <input type="datetime-local" name="check_out" class="form-control" />
                </div>
            </div>
        <div class="form-group">
            
        </div>

        </div>


</form>

